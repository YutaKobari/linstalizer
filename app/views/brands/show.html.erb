<div class="m-3">
  <ul class="nav nav-pills nav-fill justify-content-start align-items-end">
    <li class="mr-auto">
      <div class="badge badge-default my-2 mr-2"><%= @brand.market.name %> </div>
      <div class="text-left h1 mb-0"><%= @brand.name %></div>
    </li>
    <% @brand.accounts.each do |account| %>
    <li>
      <%= link_to account.media, account_path(account), class:"btn-sns-form nav-link text-center #{account.media}_color" %>
    </li>
    <% end %>
    <li>
      <%= link_to 'ブランドTOPIX', '#', class:"nav-link text-center active", style:"margin: 10px 15px;" %>
    </li>
  </ul>
</div>

<div class="card">
  <%= render 'filter_elements/aggregation_graph_header', { graph_title: 'ブランドTOPIX', controller: "brand", graph_name: "brandlift" } %>
  <div class="card-body" style="padding-bottom: 40px;">
    <%= render 'brand_lift', brand: @brand, brandlift_per_date: @brandlift_per_date %>
  </div>
</div>

<%= render 'brands/tabs/tab_main', brand: @brand, posts: @posts %>
