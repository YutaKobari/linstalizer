<%# TODO: メディア分岐のハードコードに注意 %>
<div class="card my-3">
    <div class="card-body d-flex align-items-center">
        <h2 class="mb-0"><%= @post.brand.name %></h2>
        <div class="badge badge-default ml-3"><%= @post.market.name %></div>
    </div>
</div>
<div class="row">
    <div class="col-lg-4" id="left_wrapper">
        <%= render 'detail_info', post: @post %>
    </div>
    <div class="col-lg-4" id="right_wrapper">
        <%= render 'carousel', post: @post %>
    </div>
    <div class="col-lg-4">
        <%= render 'post_body', post: @post %>
    </div>
</div>

<div class="row">
    <% if @post.media=="Twitter" then %>
    <div class="col-sm-6">
        <%= render 'like_trans_chart', post: @post %>
    </div>
    <div class="col-sm-6">
        <%= render 'retweet_trans_chart', post: @post %>
    </div>
    <% else %>
    <div class="col-sm-12">
        <%= render 'like_trans_chart', post: @post %>
    </div>
    <% end %>
</div>
<%#= javascript_pack_tag 'post/size_arrange' %>
