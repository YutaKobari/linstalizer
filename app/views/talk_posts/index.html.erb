<%= render "filter_form", redirect_path: talk_posts_path %>
<%= render "layouts/csvdl_button", csv_download_path: "talk_post_csv_download_path" %>

<div class="card">
  <div class="table-responsive-xl table-hover">
    <table class="table align-items-center">
      <thead>
        <tr>
          <th scope="col" style="width:25%">アカウント</th>
          <th scope="col" style="width:60%;">コンテンツ</th>
          <th scope="col" style="width:15%">投稿日時</th>
        </tr>
      </thead>
      <tbody>
        <%= render 'talk_posts/talk_post_content', talk_post_contents: @talk_post_contents %>
      </tbody>
    </table>
  </div>
</div>

<%= render 'layouts/pagination_link', records: @talk_post_contents %>
