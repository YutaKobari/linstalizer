<div class="form-group row py-1">
  <%= form.label :facebook, "Facebook", class: "col-3 col-form-label sns_labels" %>
  <div class="col-9 d-flex align-items-center">
    <div class="form-check">
      <input class="form-check-input Facebook-checkall" type="checkbox">
      <label class="form-check-label" for="check1a">全選択</label>
    </div>

    <% post_type_selected = params[:media_post_types]&.include?("Facebook-normal_post") %>
    <div class='btn btn-outline-primary btn-sns-form Facebook-normal_post Facebook-sns-btn' data-toggle="button" aria-pressed="<%= post_type_selected %>">
      <input type="checkbox" name="media_post_types[]" value='Facebook-normal_post' style="width: 0px" class="sns-checkbox" <%= post_type_selected ? 'checked' : '' %>/>
      タイムライン投稿
    </div>
    <% post_type_selected = params[:media_post_types]&.include?("Facebook-story") %>
    <div class='btn btn-outline-primary btn-sns-form Facebook-story Facebook-sns-btn' data-toggle="button" aria-pressed="<%= post_type_selected %>">
      <input type="checkbox" name="media_post_types[]" value='Facebook-story' style="width: 0px" class="sns-checkbox" <%= post_type_selected ? 'checked' : '' %>/>
      ストーリー
    </div>
  </div>
</div>
