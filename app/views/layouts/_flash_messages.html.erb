<% flash.each do |key, value| %>
  <% key = "success" if key == "notice" %>
  <% key = "danger"  if key == "alert" %>
  <div data-notify="container" class="alert alert-<%= key %> alert-dismissible alert-notify" data-notify-position="top-center" style="display: inline-block; margin: 0px auto; position: fixed; transition: all 0.5s ease-in-out 0s; z-index: 1080; top: 15px; left: 0px; right: 0px; animation-iteration-count: 1;">
    <i class="alert-icon fas fa-bell"></i>
    <div class="alert-text">
      <span data-notify="message"><%= value %></span>
    </div>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="position: absolute; right: 10px; top: 5px; z-index: 1082;"><span aria-hidden="true">Ã—</span></button>
  </div>
<% end %>
