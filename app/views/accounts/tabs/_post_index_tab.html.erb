<%# ローカル変数 redirect_path, account, posts %>
<%= render "/posts/filter_form", redirect_path: account_path(account.id, anchor: 'tab-navigation_account'), media: account.media %>
<div class="card">
  <div class="table-responsive table-hover">
    <table class="table align-items-center table-flash" id="timeline_table" style="table-layout: fixed;" >
      <thead>
        <tr>
          <th scope="col" style="width:10%">投稿タイプ</th>
          <th scope="col" style="width:35%">コンテンツ</th>
          <th scope="col" style="width:40%;">テキスト</th>
          <th scope="col" style="width:15%">詳細情報</th>
        </tr>
      </thead>
      <tbody>
        <%= render posts %>
      </tbody>
    </table>
  </div>
</div>

<%= render 'layouts/pagination_link_in_tab', records: posts, param_name: 'page' %>
