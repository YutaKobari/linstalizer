<% if is_account_show == 'true' %>

  <% if Favorite.exists?(user_id: current_user.id, account_id: account.id) %>
    <%= link_to account_favorite_path(account_id: account.id, id: account.favorites[0].id, is_account_show: 'true'), method: :delete, remote: true, class: "btn btn-success btn-block btn-sm" do %>
      <i class="fas fa-star mr-1 fa-fw" style="color: gold"></i> ピンアカに登録中
    <% end %>
  <% else %>
    <%= link_to account_favorites_path(account_id: account.id, is_account_show: 'true'), method: :post, remote: true, class: "btn btn-secondary btn-block btn-sm" do %>
      <i class="fas fa-star text-gray mr-1 fa-fw"></i> ピンアカに追加
    <% end %>
  <% end %>

<% else %>

  <% if Favorite.exists?(user_id: current_user.id, account_id: account.id) %>
    <%= link_to account_favorite_path(account_id: account.id, id: account.favorites[0].id, is_account_show: 'false'), method: :delete, remote: true, id: "favorite_#{account.id}" do %>
      <i class="fas fa-star fa-2x" style="color: gold"></i>
    <% end %>
  <% else %>
    <%= link_to account_favorites_path(account_id: account.id, is_account_show: 'false'), method: :post, remote: true, id: "favorite_#{account.id}" do %>
      <i class="fas fa-star fa-2x text-gray"></i>
    <% end %>
  <% end %>

<% end %>
